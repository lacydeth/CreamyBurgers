<Window x:Class="CreamyBurgers.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Order" Height="650" Width="450"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/StyleGrid.xaml"/>
                <ResourceDictionary Source="Styles/StyleButton.xaml"/>
                <ResourceDictionary Source="Styles/StyleTextBox.xaml"/>
                <ResourceDictionary Source="Styles/StyleComboBox.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Border x:Name="MainBorder" Style="{StaticResource Border}">
        <Border Style="{DynamicResource MainBorder}">
        <Grid Style="{DynamicResource Grid}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20">
                <Image Source="Files/CreamyBurgersLogo.png" Width="265" Height="175" Margin="0,0,0,10"/>

                <TextBlock Text="Felhasználónév:" FontSize="16" FontWeight="Bold" Margin="5" Foreground="Black"/>
                <TextBox Style="{StaticResource Textbox}" Width="200" Height="30" Margin="5"/>

                <TextBlock Text="Jelszó:" FontSize="16" FontWeight="Bold" Margin="5" Foreground="Black"/>
                <PasswordBox Style="{StaticResource Passwordbox}" Width="200" Height="30" Margin="5"/>

                <TextBlock Text="E-mail:" FontSize="16" FontWeight="Bold" Margin="5" Foreground="Black"/>
                <TextBox Style="{StaticResource Textbox}" Width="200" Height="30" Margin="5"/>

                <TextBlock Text="Helyszín:" FontSize="16" FontWeight="Bold" Margin="5" Foreground="Black"/>
                <TextBox Style="{StaticResource Textbox}" Width="200" Height="30" Margin="5"/>

                <TextBlock Text="Telefonszám:" FontSize="16" FontWeight="Bold" Margin="5" Foreground="Black"/>
                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Text="+36" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox Style="{StaticResource ComboBoxStyle}" Margin="10,0,10,0">
                        <ComboBoxItem Content="20" />
                        <ComboBoxItem Content="30" />
                        <ComboBoxItem Content="50" />
                        <ComboBoxItem Content="70" />
                    </ComboBox>
                    <TextBox Style="{StaticResource Textbox}" Width="100" Height="30" Margin="0,0,5,0"/>
                </StackPanel>

                <Button Style="{StaticResource Buttons}" Content="Küldés" Width="100" Height="30" Margin="10" Click="Button_Click"/>
            </StackPanel>
        </Grid>
    </Border>
    </Border>    
</Window>
